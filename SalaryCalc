#include<stdio.h>
#include<conio.h>
void main()
{
float principal, rate, time=3,interest;
clrscr();
printf (“\t Enter the principal amount and the rate of interest:\n”);
scanf(“%f %f ”, &principal, &rate);
interest = (principal*rate*time)/100;
printf (“ \t The simple interest calculated is: %f”, interest);
getch();
}
